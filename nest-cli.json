{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "tsconfig.json"
    },
    "monorepo": true,
    "root": "apps/collector",
    "projects": {
        "collector": {
            "type": "application",
            "root": "apps/collector",
            "entryFile": "main",
            "sourceRoot": "apps/collector/src",
            "compilerOptions": {
                "tsConfigPath": "apps/collector/tsconfig.app.json"
            }
        },
        "processor": {
            "type": "application",
            "root": "apps/processor",
            "entryFile": "main",
            "sourceRoot": "apps/processor/src",
            "compilerOptions": {
                "tsConfigPath": "apps/processor/tsconfig.app.json"
            }
        },
        "dashboard-api": {
            "type": "application",
            "root": "apps/dashboard-api",
            "entryFile": "main",
            "sourceRoot": "apps/dashboard-api/src",
            "compilerOptions": {
                "tsConfigPath": "apps/dashboard-api/tsconfig.app.json",
                "webpack": false
            }
        },
        "common": {
            "type": "library",
            "root": "libs/common",
            "entryFile": "index",
            "sourceRoot": "libs/common/src",
            "compilerOptions": {
                "tsConfigPath": "libs/common/tsconfig.lib.json"
            }
        },
        "database": {
            "type": "library",
            "root": "libs/database",
            "entryFile": "index",
            "sourceRoot": "libs/database/src",
            "compilerOptions": {
                "tsConfigPath": "libs/database/tsconfig.lib.json"
            }
        },
        "queue": {
            "type": "library",
            "root": "libs/queue",
            "entryFile": "index",
            "sourceRoot": "libs/queue/src",
            "compilerOptions": {
                "tsConfigPath": "libs/queue/tsconfig.lib.json"
            }
        },
        "events": {
            "type": "library",
            "root": "libs/events",
            "entryFile": "index",
            "sourceRoot": "libs/events/src",
            "compilerOptions": {
                "tsConfigPath": "libs/events/tsconfig.lib.json"
            }
        }
    }
}
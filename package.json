{
  "name": "analytics",
  "version": "1.0.0",
  "description": "Cross-Channel Journey Analytics - Phase 1: Web Analytics",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:sdk && npm run build:collector && npm run build:processor && npm run build:dashboard-api && npm run build:dashboard-ui",
    "build:sdk": "npm run build --workspace=packages/sdk",
    "build:collector": "nest build collector",
    "build:processor": "nest build processor",
    "build:dashboard-api": "nest build dashboard-api",
    "build:dashboard-ui": "npm run build --workspace=packages/dashboard-ui",
    "start": "nest start",
    "start:dev": "npm run start:collector:dev & npm run start:processor:dev & npm run start:dashboard-api:dev & npm run start:dashboard-ui:dev",
    "start:collector:dev": "nest start collector --watch",
    "start:processor:dev": "nest start processor --watch",
    "start:dashboard-api:dev": "nest start dashboard-api --watch",
    "start:dashboard-ui:dev": "npm run dev --workspace=packages/dashboard-ui -- --port 3002",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./apps/collector/test/jest-e2e.json",
    "test:e2e:dashboard": "jest --config ./apps/dashboard-api/test/jest-e2e.json",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:migrate": "npm run typeorm -- -d libs/database/src/datasource.ts migration:run",
    "db:generate": "npm run typeorm -- -d libs/database/src/datasource.ts migration:generate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@fastify/multipart": "^9.0.0",
    "@fastify/static": "^8.3.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.0.0",
    "@nestjs/schedule": "^6.1.1",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/throttler": "^6.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/csv-parse": "^1.1.12",
    "@types/csv-stringify": "^1.4.3",
    "@types/pg-query-stream": "^1.0.3",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "geoip-lite": "^1.4.10",
    "ioredis": "^5.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.0",
    "pg-query-stream": "^4.12.0",
    "reflect-metadata": "^0.2.0",
    "resend": "^6.9.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "ua-parser-js": "^1.0.39",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/geoip-lite": "^1.4.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.2.0",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}